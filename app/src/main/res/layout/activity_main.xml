<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_icon"
        android:gravity="center_vertical"
        android:text="Tính Tiền Điện"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#99D1EA"
        android:gravity="center"
        android:text="Nguyễn Đinh Minh Anh"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Chỉ số cũ: "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtChiSoCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Chỉ số mới: "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtChiSoMoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Số hộ (SHBT): "
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtSoHo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtkWh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số kWh dùng: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtKetqua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#B1EAF1"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:shadowColor="#FFFFFF"
        android:text="Tổng số tiền điện "
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <Button
            android:id="@+id/btnSHBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#0573CA"
            android:onClick="xulySHBT"
            android:text="SHBT" />

        <Button
            android:id="@+id/btnKD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#0573C9"
            android:onClick="xulyKD"
            android:text="KD" />

        <Button
            android:id="@+id/btnSX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#0573C9"
            android:onClick="xulySX"
            android:text="SX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#0573C9"
            android:onClick="xulyXoa"
            android:text="Xóa" />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#0573C8"
            android:onClick="xulyThoat"
            android:text="Thoát" />
    </LinearLayout>

</LinearLayout>